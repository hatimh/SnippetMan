<%= render 'layouts/inner_content' do %>
  <% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
      <%= flash[:error] %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
  <table class="table my-4">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Url</th>
        <th scope="col">Description</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @gists.each_with_index do |gist, index| %>
      <tr>
        <th scope="row"><%= index+1 %></th>
        <td>
          <%= link_to 'Link', gist.html_url, target: :_blank %>
        </td>
        <td>
          <%= gist.description %>
        </td>
        <td>
          <%= link_to 'Edit', edit_gist_path(id: gist.id), class: "btn btn-sm btn-outline-info" %>
        </td>
        <td>
          <%= link_to 'Delete', gist_path(id: gist.id), method: 'delete', class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>